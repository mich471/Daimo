<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="data_privacy_nav_links">
            <block name="pr_cookie_settings_link" template="Plumrocket_CookieConsent::account/navigation/cookie_settings.phtml" ifconfig="pr_cookie/general/enabled">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Cookie Settings</argument>
                    <argument name="description" xsi:type="string" translate="true">Update your cookie consent preferences and choose to allow or block certain cookie types. Click on cookie category headings to change your settings.</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
