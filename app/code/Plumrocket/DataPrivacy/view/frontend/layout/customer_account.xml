<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current"
                   name="customer-account-navigation-prgdpr-link" after="customer-account-navigation-billing-agreements-link"
                   ifconfig="prgdpr/general/enabled">
                <arguments>
                    <argument name="path" xsi:type="string">privacy-center/account</argument>
                    <argument name="label" xsi:type="string">My Privacy Center</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
