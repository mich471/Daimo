<div class="newattribute">
<a class="action primary add newattributebtn pts-newbtn" href="<?php echo $this->getUrl('*/*/newattributeset') ?>"><?php echo __('Create New Attribute Set'); ?></a>

	<?php $allattributes = $this->attributesetlist(); ?>
	<?php if(!empty($allattributes)) {?>
<table class="data-grid" id="attributeGrid_table">
	<thead> 
		<tr>
			<th class="data-grid-th col-attr-code col-attribute_code"><span><?php echo __('Attribute Set Name'); ?></span></th>
		</tr>
	</thead>
	<tbody>
	<?php foreach($allattributes as $attribute) { ?>
		<?php $attri = explode('_seller_',$attribute['label']); 
		?>
		<?php if(isset($attri[1])){ ?>
		<?php if(end($attri) == $this->sellerid()) { ?>
		<tr class="even _clickable">
			<td class="col-attr-code col-attribute_code"><a href="<?php echo $this->getUrl('*/*/editattributeset',['id' =>$attribute['value']]) ?>"><?php echo $attribute['label'];  ?></a></td>
		</tr>
		<?php } } else { ?>
		<tr class="even _clickable">
			<td class="col-attr-code col-attribute_code"><?php echo $attribute['label'];  ?></td>
		</tr>
	<?php } ?>
	<?php  } ?>
	</tbody>
</table>
	<?php } else {?>
    <div class="message info empty notickets"><span><?php echo __('No Attribute Set Found'); ?></span></div>
	<?php } ?>
</div>