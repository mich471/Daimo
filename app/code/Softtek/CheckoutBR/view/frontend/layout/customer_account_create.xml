<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Criar nova conta de cliente</title>
    </head>
    <body>
        <referenceBlock name="customer_form_register">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Softtek_CheckoutBR::form/register.phtml</argument>
            </action>
        </referenceBlock>
         <referenceContainer name="form.additional.info">
            <block class="Magento\Framework\View\Element\Template" name="register.agreements" template="Magento_Customer::additional_agreements.phtml"/>
        </referenceContainer>
    </body>
</page>