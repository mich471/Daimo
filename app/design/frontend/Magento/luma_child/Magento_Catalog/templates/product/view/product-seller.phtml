<?php 
    $_product = $block->getProduct();
    $customerID = $_product->getSellerId(); 
    $objectManager = \Magento\Framework\App\ObjectManager::getInstance();
    $customerObj = $objectManager->create('Magento\Customer\Model\Customer')
    ->load($customerID);
?>

<?php if ($customerID): ?>

    <div class="seller-by">
        <span><?= $block->escapeHtml(__('Sold by:')) ?></span> <b><?php echo $customerObj->getFirstname().'&nbsp;'. $customerObj->getLastname(); ?></b>
    </div>
<?php endif ?>